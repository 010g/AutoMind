<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>


    <style name="BottomNavigationView">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="SettingsCardStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/light_black</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">times</item>
    </style>

    <!-- style for the chip -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_background_selector</item>
        <item name="chipIconTint">@drawable/chip_icon_tint</item>
    </style>

    <!-- style for the WhiteSeekBar -->
    <style name="WhiteSeekBar">
        <item name="android:background">@drawable/seekbar_background</item>
        <item name="android:progressBackgroundTint">@android:color/white</item>
        <item name="android:progressTint">@android:color/white</item>
    </style>


    <!-- Custom AlertDialog style -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Color for positive/negative button text -->
        <item name="buttonBarPositiveButtonStyle">@style/WhiteTextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/WhiteTextButton</item>
    </style>

    <!-- Style for white text on buttons -->
    <style name="WhiteTextButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for search bar -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <!--   SplashTheme-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_first</item>
    </style>


</resources>